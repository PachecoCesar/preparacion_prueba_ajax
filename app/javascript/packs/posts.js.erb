$(document).on('ready turbolinks:load', function(){

  $("input[name='q']").keyup(function(){
    //filtrar
    var q = $(this).val()
    if(q.length > 2){
      $.ajax({
        type: "get",
        url: "/posts",
        data: { q: q },
        dataType: "script"
       });
     };

   //liberar
   if(q.length == 0){
     $.ajax({
       type: "get",
       url: "/posts",
       dataType: "script"
     });
   };
 })
});
